<ui:Page x:Class="Focus.Apps.EasyNpc.Debug.LogPage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:debug="clr-namespace:Focus.Apps.EasyNpc.Debug"
         xmlns:main="clr-namespace:Focus.Apps.EasyNpc.Main"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         mc:Ignorable="d" 
         d:DataContext="{d:DesignInstance Type=main:MainViewModel}"
         d:DesignHeight="450" d:DesignWidth="800" Loaded="Page_Loaded" DataContextChanged="Page_DataContextChanged">
    <Grid DataContext="{Binding Path=Log}">
        <debug:ScrollingTextBox IsReadOnly="True" Text="{Binding Path=Text, Mode=OneWay}"></debug:ScrollingTextBox>
    </Grid>
</ui:Page>
