{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./out",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
